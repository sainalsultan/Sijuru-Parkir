<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_punishment"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48dp"
        android:layout_margin="@dimen/_16dp"
        android:background="@drawable/selector_button_red_white"
        android:text="Denda"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/textview15BoldBlack"
        android:textColor="@drawable/selector_text_white_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_detail"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48dp"
        android:layout_margin="@dimen/_16dp"
        android:background="@drawable/selector_button_orange_white"
        android:text="Detail"
        android:textAllCaps="false"
        android:textAppearance="@style/textview15BoldBlack"
        android:textColor="@drawable/selector_text_white_orange"
        app:layout_constraintBottom_toBottomOf="@+id/button_punishment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_punishment"
        app:layout_constraintTop_toTopOf="@+id/button_punishment" />

</androidx.constraintlayout.widget.ConstraintLayout>